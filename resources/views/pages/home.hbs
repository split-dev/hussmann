<!doctype html>
<html lang="en">
<head>
  {{> ../common/head }}
</head>
<body class="home header-light">
  {{> ../common/header}}

  <div class="swiper-container hero-slider h-128 mb-16 pb-10 md:pb-0 md:h-160 md:mb-20 lg:h-screen lg:mb-0">
    <div class="swiper-wrapper">
      <div class="swiper-slide flex bg-cover bg-center md:pb-20 lg:pb-32" style="background-image: url('images/pictures/hero-img-1.jpg')">
        <div class="container">
          <div class="flex h-full text-white items-end">
            <div class="-mb-5 md:mb-0">
              <h1 class="mb-10 leading-12">Innovating Climate <br>
                solutions for a better future</h1>
              <div>
                <a href="#" class="btn-lg btn-primary mb-3 md:mr-4 md:mb-0 flex">Our Retail Solutions</a>
                <a href="#" class="btn-lg btn-white">Our Product Range</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="swiper-slide flex bg-cover bg-center md:pb-20 lg:pb-32" style="background-image: url('images/pictures/donuts-picture.jpg')">
        <div class="container">
          <div class="flex h-full text-white items-end">
            <div class="-mb-5 md:mb-0">
              <h1 class="mb-10 leading-12">Innovating Climate <br>
                solutions for a better future</h1>
              <div>
                <a href="#" class="btn-lg btn-primary mr-4">Our Retail Solutions</a>
                <a href="#" class="btn-lg btn-white">Our Product Range</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="swiper-slide flex bg-cover bg-center md:pb-20 lg:pb-32" style="background-image: url('images/pictures/hero-img-1.jpg')">
        <div class="container">
          <div class="flex h-full text-white items-end">
            <div class="-mb-5 md:mb-0">
              <h1 class="mb-10 leading-12">Innovating Climate <br>
                solutions for a better future</h1>
              <div>
                <a href="#" class="btn-lg btn-primary mr-4">Our Retail Solutions</a>
                <a href="#" class="btn-lg btn-white">Our Product Range</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="swiper-pagination hidden md:block"></div>
    <div class="container">
      <div class="hidden py-6 items-center lg:flex">
        <button id="scroll-down" class="h-12 w-12 shadow mr-4">
          <img src="images/symbols/arrow-down.svg" alt="#" class="m-auto">
        </button>
        <p class="text-primary text-sm">Scroll down</p>
      </div>
    </div>
  </div>

  {{> ../partials/image-content-block}}

  <section class="lg:-mb-6 pt-16 sm:pt-20 lg:pt-40">
    <!--Link Group Title-->
    <div class="container">
      <div class="sm:flex flex-wrap items-center justify-between mb-10 font-medium">
        <h3 class="text-black">Explore our Cabinet <br class="sm:hidden"> Range</h3>
        <div class="flex items-center justify-end">
          <p class="text-primary text-sm">Explore all</p>
          <a href="#" class="inline-flex shadow ml-4 p-1 h-6 w-6 sm:h-12 sm:w-12 sm:p-0">
            <img src="images/symbols/arrow-right.svg" alt="#" class="m-auto">
          </a>
        </div>
      </div>
    </div>

    <!--links-->
    <div class="container">
      <div class="tiles-slider swiper-container">
        <div class="swiper-wrapper lg:flex-wrap lg:-mx-3">
          {{#each link-tile}}
            {{> ../partials/link-tile}}
          {{/each}}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </section>

  {{> ../partials/image-content-block-v2}}

  <section class="h-64 bg-cover bg-center flex items-end lg:h-128 xl:h-160" style="background-image: url('images/pictures/donuts-picture.jpg')">
    <div class="container -mb-32 lg:-mb-24">
      <div class="bg-white relative px-8 py-8 mt-40 lg:pb-20 lg:pt-16 lg:px-24 lg:mt-0">
        <p class="text-sm text-primary">
          Recent Project
        </p>
        <div class="flex justify-between items-end flex-col lg:flex-row">
          <h2 class="text-xl leading-6 text-black lg:pr-8 md:text-3xl md:leading-normal lg:max-w-2xl mb-6 lg:mb-0">
            Independant Mediterranean style supermarket, Oasis Bakery, expands with the help of Hussmann
          </h2>
          <a href="#" class="btn btn-primary w-full sm:w-auto text-center">View Project</a>
        </div>
        <span class="block absolute bottom-0 left-0 bg-primary-gradient h-7px w-full"></span>
      </div>
    </div>
  </section>

  <section class="bg-gray-100 pb-16 sm:pb-20 pt-56">
    <div class="container flex flex-col justify-between lg:flex-row">
      <div class="lg:max-w-md mb-6 sm:mb-12">
        <h2 class="text-black mb-4">Setting up our <br class="hidden lg:inline">
          customers for success</h2>
        <p>
          From expert store design, installations and tech support to project execution and financing, rely on our services to move your business forward.
        </p>
        <a href="#" class="btn btn-primary mt-8">All Services</a>
      </div>
      <div class="border-t-2 border-black w-full text-black font-medium text-lg lg:max-w-md xl:max-w-lg">
        <a href="#" class="flex justify-between py-6 hover-img-bounce border-gray-400 border-b">
          <span class="max-w-tiny sm:max-w-lg">Design</span>
          <img src="images/symbols/arrow-right.svg" alt="#">
        </a>
        <a href="#" class="flex justify-between py-6 hover-img-bounce border-gray-400 border-b">
          <span class="max-w-tiny sm:max-w-lg">Project  Management & Logistics</span>
          <img src="images/symbols/arrow-right.svg" alt="#">
        </a>
        <a href="#" class="flex justify-between py-6 hover-img-bounce border-gray-400 border-b">
          <span class="max-w-tiny sm:max-w-lg">Installation</span>
          <img src="images/symbols/arrow-right.svg" alt="#">
        </a>
        <a href="#" class="flex justify-between py-6 hover-img-bounce border-gray-400 border-b">
          <span class="max-w-tiny sm:max-w-lg">Services & Maintenance</span>
          <img src="images/symbols/arrow-right.svg" alt="#">
        </a>
        <a href="#" class="flex justify-between py-6 hover-img-bounce border-gray-400 border-b">
          <span class="max-w-tiny sm:max-w-lg">After Market Support & Warranty</span>
          <img src="images/symbols/arrow-right.svg" alt="#">
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 sm:py-32">
    {{> ../partials/image-content-block-v3}}
  </section>

  {{> ../partials/cta}}

  {{> ../common/footer}}
</body>
</html>
