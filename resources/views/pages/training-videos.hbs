<!doctype html>
<html lang="en">
<head>
  {{> ../common/head }}
</head>
<body class="training-videos">
  {{> ../common/header}}
  {{> ../partials/page-intro breadcrumbs=true}}
  {{> ../partials/image-content-block}}
  <section class="container">
    <div class="md:flex items-center justify-between mb-8 mt-16 md:mt-24">
      <h3 class="text-black">All Videos</h3>
      <div class="flex flex-col sm:items-center sm:flex-row mt-4 md:mt-0">
        <p class="text-black mr-6 text-base mb-3 sm:mb-0">Refine By</p>
        <select name="category" id="category" class="select2 hidden">
          <option></option>
          <option value="#">Category 1</option>
          <option value="#">Category 2</option>
          <option value="#">Category 3</option>
          <option value="#">Category 4</option>
          <option value="#">Category 5</option>
        </select>
      </div>
    </div>
    <div class="flex flex-wrap lg:flex-no-wrap -mx-3 mb-16 md:mb-24">
      {{#each video}}
      <div class="px-3 md:w-1/2 mb-6 lg:mb-0">
        <div class="video-box">
          <video class="w-full h-64 mb-6 object-cover" src="#" poster="images/common/video-poster.jpg"></video>
          <button class="btn-play" data-play>
            <img src="images/symbols/play-icon.svg" alt="#">
          </button>
          <button class="btn-pause" data-pause>
            <img src="images/symbols/pause-icon.svg" alt="#">
          </button>
        </div>
        <h4 class="text-black mb-6">Video Title</h4>
        <p class="text-base">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec imperdiet purus id felis ultricies fermentum corner lorster drum.
        </p>
      </div>
      {{/each}}
    </div>
  </section>
  {{> ../partials/cta}}
  {{> ../common/footer}}
</body>
</html>
